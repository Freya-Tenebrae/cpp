NAME=animal

SRCS=main.cpp Animal.cpp Cat.cpp Dog.cpp
OBJS=$(SRCS:.cpp=.o)
INCLUDES=Animal.hpp Cat.hpp Dog.hpp

CC=clang++
CFLAGS=-Wall -Wextra -Werror -std=c++98 -g3

RM=rm -f

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) -c $(CFLAGS) -o $@ $< -I $(INCLUDES)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all
	